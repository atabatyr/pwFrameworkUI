{
  "name": "pw",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --grep @regression",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:chromium": "npx playwright test --project=chromium --grep @regression",
    "test:chromium-report": "npx playwright test --project=chromium && npx playwright show-report",
    "test:firefox": "npx playwright test --project=firefox --grep @regression",
    "test:firefox-report": "npx playwright test --project=chromium && npx playwright show-report",
    "test:webkit": "npx playwright test --project=webkit --grep @regression",
    "test:webkit-report": "npx playwright test --project=webkit && npx playwright show-report",
    "test:headed": "npx playwright test --headed",
    "report": "npx playwright show-report",
    "allure:generate": "npx allure-commandline generate allure-results --clean -o allure-report",
    "allure:open": "npx allure-commandline open allure-report",
    "clean:reports": "rm -rf allure-results allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
